  <h1 class="text-2xl font-bold text-center text-gray-700 my-6">投稿の詳細</h1>

  <p style="color: green"><%= notice %></p>

  <div id="login-histories" class="flex flex-col items-center gap-6 px-6">
      <% if @post.option == 0 %>
        <div class="bg-emerald-100 rounded-lg shadow-lg p-5 w-full max-w-sm transition-transform transform hover:translate-y-[-5px] hover:shadow-xl block">
          <p class="text-3xl font-medium text-gray-600 mb-2"><%= @post.name %><span class="text-sm"> さん</span></p>
          <p class="text-lg font-medium text-gray-600 mb-3 ml-2">本日も張り切って!</p>
          <small class="text-sm text-gray-500 text-right block"><%= @post.created_at.in_time_zone('Asia/Tokyo').strftime("%Y-%m-%d %H:%M:%S") %></small>
        </div>
      <% else %>
        <div class="bg-blue-100 rounded-lg shadow-lg p-5 w-full max-w-sm transition-transform transform hover:translate-y-[-5px] hover:shadow-xl block">
          <p class="text-3xl font-medium text-gray-600 mb-2"><%= @post.name %><span class="text-sm"> さん</span></p>
          <p class="text-lg font-medium text-gray-600 mb-3 ml-2">本日はこの辺で</p>
          <small class="text-sm text-gray-500 text-right block"><%= @post.created_at.in_time_zone('Asia/Tokyo').strftime("%Y-%m-%d %H:%M:%S") %></small>
        </div>
      <% end %>
    </div>
  </div>
  <% if @post.user_id == current_user.id %>
    <div class="flex justify-center mt-5">
      <%= button_to "削除", @post, method: :delete, data: { "turbo-confirm": '本当に削除しますか？' }, class: "bg-purple-400 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded ml-2" %>
    </div>
  <% end %>
  <div class="flex justify-center mt-5">
    <%= link_to "投稿一覧へ戻る", posts_path %>
  </div>