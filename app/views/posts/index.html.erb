<h1 class="text-2xl font-bold text-center text-gray-700 my-6 mt-12">
  最近のログイン履歴
</h1>

<div id="login-histories" class="flex flex-col items-center gap-6 px-6">
  <% @posts.each do |post| %>
    <%= link_to edit_post_path(post), class: "bg-white rounded-lg shadow-lg p-5 w-full max-w-sm transition-transform transform hover:translate-y-[-5px] hover:shadow-xl block" do %>
      <p class="text-lg font-medium text-gray-600"><%= post.name %>さん</p>
      <p class="text-lg font-medium text-gray-600"><%= post.option == "1" ? "本日も張り切って" : "本日はこの辺で" %></p>
      <small class="text-sm text-gray-500"><%= post.created_at.in_time_zone('Asia/Tokyo').strftime("%Y-%m-%d %H:%M:%S") %></small>
    <% end %>
  <% end %>
</div>

<div class="fixed bottom-4 right-4"> 
  <!-- メインボタン（完全な丸形） -->
  <button id="main-button" class="bg-blue-600 text-white w-16 h-16 rounded-full flex items-center justify-center shadow-lg hover:bg-blue-700 focus:outline-none">
    本日も!
  </button>
  <!-- ドロップダウンボタン（上方向に表示） -->
  <div id="dropdown-buttons" class="hidden absolute bottom-full right-0 flex flex-col items-end gap-2 mb-2 w-40 bg-white rounded-lg shadow-lg">
    <!-- Option 1 -->
    <%= link_to "張り切って", posts_path(post:{option: "0", name: current_user.name}), data: { "turbo-method": :post }, class: "bg-green-600 text-white rounded-lg py-2 px-4 shadow-md hover:bg-green-700 focus:outline-none dropdown-item w-full text-center" %>
    <!-- Option 2 -->
    <%= link_to "この辺で終わる", posts_path(option: "1", name: current_user.name), data: { "turbo-method": :post }, class: "bg-green-600 text-white rounded-lg py-2 px-4 shadow-md hover:bg-green-700 focus:outline-none dropdown-item w-full text-center" %>
  </div>
</div>