<h1 class="text-2xl font-bold text-center text-gray-700 my-6">
  最近のログイン履歴
</h1>

<div id="login-histories" class="flex flex-col items-center gap-6 px-6">
  <% @posts.each do |post| %>
    <div class="bg-white rounded-lg shadow-lg p-5 w-full max-w-sm transition-transform transform hover:translate-y-[-5px] hover:shadow-xl">
      <p class="text-lg font-medium text-gray-600"><%= post.name %>さんがログインしました</p>
      <small class="text-sm text-gray-500"><%= post.created_at.in_time_zone('Asia/Tokyo').strftime("%Y-%m-%d %H:%M:%S") %></small>
    </div>
  <% end %>
</div>
