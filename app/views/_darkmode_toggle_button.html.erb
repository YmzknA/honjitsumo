<button 
  aria-label="ダークモードを切り替える"
  class="p-2 rounded-lg bg-surface
         hover:bg-surface/50
         transition-colors duration-200 group"
>
  <div class="relative w-4 h-4">
    <!-- 太陽のアイコン（ライトモード） -->
    <svg 
      xmlns="http://www.w3.org/2000/svg" 
      class="absolute inset-0 w-4 h-4 text-gray-800 dark:text-gray-200
             transition-transform duration-200 rotate-0 dark:rotate-90
             opacity-100 dark:opacity-0"
      fill="none" 
      viewBox="0 0 24 24" 
      stroke="currentColor"
    >
      <path 
        stroke-linecap="round" 
        stroke-linejoin="round" 
        stroke-width="2" 
        d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
      />
    </svg>
    
    <!-- 月のアイコン（ダークモード） -->
    <svg 
      xmlns="http://www.w3.org/2000/svg" 
      class="absolute inset-0 w-4 h-4 text-gray-800 dark:text-gray-200
             transition-transform duration-200 -rotate-90 dark:rotate-0
             opacity-0 dark:opacity-100"
      fill="none" 
      viewBox="0 0 24 24" 
      stroke="currentColor"
    >
      <path 
        stroke-linecap="round" 
        stroke-linejoin="round" 
        stroke-width="2" 
        d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
      />
    </svg>
  </div>
</button>
